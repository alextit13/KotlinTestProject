<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--<data>
        <variable
            name="currencyViewModel"
            type="com.testproject.android.kotlintestproject.viewmodel.CurrencyViewModel"/>
    </data>-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5dp">
            <!--Currency{NumCode=756, CharCode='CHF', Scale=1, Name='Швейцарский франк', Rate=2.0004}-->
            <TextView
                android:id="@+id/CharCode"
                tools:text="CHF"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/Rate"
                tools:text="2.0004"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/BYN"
                android:text="BYN"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                tools:text="Швейцарский франк" />
            <TextView
                android:id="@+id/Scale"
                tools:text="за 1 ед."
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>